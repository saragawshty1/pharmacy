@model Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row d-flex" style="min-height: 100vh;">
        <!-- Main Content (Create Category Form) -->
        <main class="col-md-12 ms-sm-auto col-lg-12 px-md-4">
            <div class="container my-5">
                <div class="card form-container">
                    <div class="form-header">
                        <i class="bi bi-folder form-icon"></i>
                        <h3>Create Category</h3>
                    </div>
                    <form asp-area="Admin" asp-controller="Category" asp-action="Create">
                        <!-- Category Name Input -->
                        <div class="mb-3">
                            <label asp-for="CategoryName" class="form-label">Category Name</label>
                            <input asp-for="CategoryName" class="form-control" id="categoryName" placeholder="Enter Category Name">
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>

                        <!-- Icon URL Input -->
                        <div class="mb-3">
                            <label asp-for="IconUrl" class="form-label">Icon URL</label>
                            <input asp-for="IconUrl" type="url" class="form-control" id="iconUrl" placeholder="Enter Icon URL">
                            <span asp-validation-for="IconUrl" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <input type="submit" value="Create Category" class="btn btn-custom btn-block">
                        </div>
                        <br>
                        <div>
                            <a href="/Admin/DashboardHome/Index" class="btn btn-custom btn-block w-100">Back to Home</a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Styling -->
<style>
    .card {
        border-radius: 15px;
    }

    .shadow-lg {
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        border-radius: 15px;
    }

    table thead {
        border-radius: 15px;
    }

    .form-container {
        width: 800px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .form-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-icon {
        font-size: 50px;
        color: #d9534f;
    }

    .btn-custom {
        background-color: #d9534f;
        color: black;
        border-radius: 25px;
    }

        .btn-custom:hover {
            background-color: darkred;
            color: white;
        }
</style>
