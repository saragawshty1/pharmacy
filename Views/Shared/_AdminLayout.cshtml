<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts (for beautiful typography) -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />

    <!-- Font Awesome (for icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        
        /* Sidebar Styling */
        .sidebar {
            height: 100vh;
            background-color: #343a40;
            position: sticky;
            top: 0px;
            padding-top: 1rem;
            margin-top:5px
        }

            .sidebar .nav-link {
                color: #adb5bd;
                font-size: 1.1rem;
                padding: 1rem 1.5rem;
                border-radius: 0.5rem;
                transition: all 0.3s ease;
            }

            .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: white;
                    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
                    transform: scale(1.05);
            }

            .sidebar .nav-link.active {
                    background-color: #d9534f;
                    color: white;
                    font-weight: bold;
            }

       

            .content h1 {
                font-weight: 700;
                margin-bottom: 1rem;
                color: #343a40;
            }

            .content p {
                font-size: 1.1rem;
                color: #6c757d;
            }

        /* Button Styling */
        .btn-custom {
            background-color: #d9534f;
            color: white;
            border-radius: 0.5rem;
            font-weight: 500;
        }

            .btn-custom:hover {
                background-color: darkred;
            }

        /* Footer Styling */
        footer {
            padding: 5px;
            text-align: center;
            background-color: #343a40;
            color: white;
            margin-top: 80px;
        }

            footer a {
                color: #d9534f;
                text-decoration: none;
            }

            footer a:hover {
                    text-decoration: underline;
            
            }
            

    </style>
</head>

<body>

   
    <header >
        <nav class="navbar navbar-dark navbar-expand-sm navbar-toggleable-sm" style="background-color: maroon;  ">
            <!-- Navbar content -->
            <div class="container-fluid">
               
                    <img src="~/images/logo.jpg" alt="Logo" class="rounded-circle" width="50px" height="50px" style="margin: 10px;" />
                
                <a class="navbar-brand" href="#">Pharmacy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                </div>
                <partial name="_LoginPartial"></partial>
            </div>
        </nav>
    </header>

    
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-md-block bg-dark sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "DashboardHome" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                               href="/Admin/DashboardHome/Index">
                                <i class="fas fa-home"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "User" && ViewContext.RouteData.Values["action"].ToString() == "Create" ? "active" : "")"
                               asp-area="Admin" asp-controller="AddUser" asp-action="Create">
                                <i class="fas fa-user-plus"></i> Add New User
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Category" && ViewContext.RouteData.Values["action"].ToString() == "Create" ? "active" : "")"
                               asp-area="Admin" asp-controller="Category" asp-action="Create">
                                <i class="fas fa-folder-plus"></i> Add Category
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Category" && ViewContext.RouteData.Values["action"].ToString() == "GetAll" ? "active" : "")"
                               asp-area="Admin" asp-controller="Category" asp-action="GetAll">
                                <i class="fas fa-edit"></i> Edit & Delete Category
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Order" && ViewContext.RouteData.Values["action"].ToString() == "Manage" ? "active" : "")"
                               href="#">
                                <i class="fas fa-tasks"></i> Manage Orders
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto col-lg-10 content">
                <h1>@ViewData["Title"]</h1>
                
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Pharmacy | <a href="#">Privacy Policy</a></p>
    </footer>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
