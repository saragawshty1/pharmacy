<!DOCTYPE html>
<html lang="en">
<head>
 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/pharmacy.styles.css" asp-append-version="true" /> *@

    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 2px;
            padding: 0;
            background-color: #f4f4f4;
            vertical-align: middle;
            min-height:100vh;
        }

        .navbar {
            background-color: #800000; /* Maroon background */
            margin-bottom:10px;
            padding:20px;
            
        }

        .navbar-brand {
            color: #ffffff !important;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #ffffff !important;
            font-size: 1rem;
            padding: 10px 15px;
        }

        .navbar-toggler-icon {
            background-image: url('data:image/svg+xml;charset=utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="%23ffffff" viewBox="0 0 16 16"><path d="M2 4h12v1H2V4zm0 3h12v1H2V7zm0 3h12v1H2v-1z"/></svg>');
        }

        .form-control {
            border-radius: 25px;
            padding-left: 20px;
        }

        .btn-search {
            background-color: #ffffff;
            border-radius: 25px;
            color: #800000;
            border: none;
            padding: 10px 20px;
            margin-left: 10px;
        }

        .d-flex {
            justify-content: flex-end; /* This centers the form horizontally */
            align-items: center; /* This ensures vertical alignment */
        }

        .custom-footer {
            background-color: #b23b3b;
            color: white;
            padding: 40px 0;
            margin-top: 30px; /* Ensures it is well-positioned at the bottom */
        }

            .custom-footer h5 {
                font-weight: bold;
                margin-top: 10px; 
                color: #fff;
            }

            .custom-footer .footer-text {
                font-size: 14px;
                line-height: 1.6;
                color: #fff;
                margin-bottom: 0;
            }

            .custom-footer .footer-icon {
                font-size: 40px;
                color: #fff;
                margin-bottom: 10px;
            }

            .custom-footer .footer-link {
                color: #fff;
                text-decoration: none;
            }

                .custom-footer .footer-link:hover {
                    text-decoration: underline;
                }

            .custom-footer p {
                margin: 0;
                color: #fff;
            }
    </style>
</head>
 
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo.jpg" alt="Logo" class="rounded-circle" width="50" height="50" />
                    Pharmacy
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Patient" asp-controller="Category" asp-action="Index">Shop by Category</a>
                        </li>
                        @*Dropdown------------------------------------------------------------*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Medical Consultation
                            </a>

                            <ul class="dropdown-menu">
                              
                                <li class="dropdown-item">
                            <a class="dropdown-item" asp-area="Patient" asp-controller="Post" asp-action="Index">Add Post</a>
                        </li>

                                <li class="dropdown-item">
                                    <a class="dropdown-item" asp-area="Patient" asp-controller="Community" asp-action="Index">Community</a>
                        </li>
                        @if(User.Identity.IsAuthenticated && User.IsInRole("Doctor"))
                        {

                                    <li class="dropdown-item">
                                        <a class="dropdown-item" asp-area="Doctor" asp-controller="Comment" asp-action="GetPost">Manage Posts</a>
                        </li>
                        }
                        </ul>
                        </li>
                        @*carttttttttttttt*@
                       
                        @if (User.Identity.IsAuthenticated)
                         {
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-action="Index" asp-controller="ShoppingCart">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
                                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                                    </svg>

                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-action="AddToFavorite" asp-controller="Category">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bookmark-heart-fill" viewBox="0 0 16 16">
                                        <path d="M2 15.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2zM8 4.41c1.387-1.425 4.854 1.07 0 4.277C3.146 5.48 6.613 2.986 8 4.412z" />
                                    </svg>

                                </a>
                            </li>
                        }
                       


                   
                         
                    </ul>
                    <form class="d-flex" asp-controller="Home" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="Name" />
                        <button class="btn-search" type="submit">Search</button>
                    </form>
                </div>
                <partial name="_LoginPartial"></partial>
            </div>
        </nav>
    </header>
    <div class="container   min-vh-200">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (IsSectionDefined("ShowFooter"))

    {

        <footer class="custom-footer mt-auto py-3">
            <div class="container">
            <div class="row">
                <div class="col-md-3 text-center">
                    <i class="bi bi-truck footer-icon"></i>
                    <h5>FAST & FREE SHIPPING</h5>
                    <p class="footer-text">Get your order delivered the same or next day</p>
                </div>
                <div class="col-md-3 text-center">
                    <i class="bi bi-tag footer-icon"></i>
                    <h5>DISCOUNTS & OFFERS</h5>
                    <p class="footer-text">Enjoy different promotions, brand discounts</p>
                </div>
                <div class="col-md-3 text-center">
                    <i class="bi bi-lock footer-icon"></i>
                    <h5>SECURE SHOPPING</h5>
                    <p class="footer-text">We prioritize your security with safe transactions.</p>
                </div>
                <div class="col-md-3 text-center">
                    <i class="bi bi-headset footer-icon"></i>
                    <h5>CUSTOMER SUPPORT</h5>
                    <p class="footer-text">Reach out for any queries or support.</p>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col text-center">
                    <a href="#" class="footer-link">Terms & Conditions</a> |
                    <a href="#" class="footer-link">Privacy Policy</a> |
                    <a href="#" class="footer-link">Contact Us</a>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col text-center">
                    <p>&copy; 2024 Your Pharmacy | All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    }


   

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("ShowFooter", required: false)
</body>
</html>
